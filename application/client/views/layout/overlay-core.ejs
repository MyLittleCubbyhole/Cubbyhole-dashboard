<!DOCTYPE html>
<html ng-app="<%- angular.module %>">
	<head>

	<!-- meta -->
		<title>CubbyHole - <%- headers.title %></title>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta http-equiv="Pragma" content="no-cache">
		<meta http-equiv="Cache-Control" content="no-cache">
		<meta http-equiv="Lang" content="fr">
		<meta charset="UTF-8">
		<meta name="description" content="<%- headers.description %>"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<!-- if partials used -->
		<meta name="fragment" content="!">
	<!-- meta -->

	<!-- design -->
		<!-- styles -->
		<%if (environment == 'dev') { %>
		<link rel="stylesheet" href="/styles/core.css">
		<link rel="stylesheet" href="/styles/components/header.css">
		<link rel="stylesheet" href="/styles/libraries/dashydash.css">
		<link rel="stylesheet" href="/styles/libraries/bootstrap/bootstrap.min.css">
		<% } %>
		<%if (environment == 'prod') { %>
		<link rel="stylesheet" href="/minified/styles/style.min.css">
		<% } %>
		<!-- styles -->
		<!-- fonts -->
		<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
		<!-- fonts -->
	<!-- design -->

	</head>
	<body ng-controller="OverlayController">

		<section id="container"  ng-controller="<%- angular.controller %>" ng-class="{open: Overlay.pusherOpen}" class="ng-scope">


			<section id="pusher">

				<section id="body">

					<!-- header -->
					<%- include ../partials/ejs/component/header.ejs %>
					<!-- header -->

					<!-- content -->
					<%- body %>
					<!-- content -->

				</section>
			</section>

			<section id="overlay" ng-class="{ activated: Overlay.activated || Overlay.pusherOpen }" ng-click="Overlay.clickout();"></section>

			<section id="overlay-pusher">
				
				<section id="widget-menu">
					<h2 class="switch"><span class="widget_menu"><i class="fa fa-cog"></i></span> Choisissez votre widget</h2>
					<ul class="container">

						<li>
							<span class="btn">
								<img src="/images/widget-icons/icosinglenumber.png" alt="">
								<span>Single Number</span>
							</span>
							<span class="widgsize">
								<span> Taille du widget </span>
								<button class="btn btn-danger">25%</button>
							</span>
						</li>

						<li>
							<span class="btn">
								<img src="/images/widget-icons/icotable.png" alt="">
								<span>Table</span>
							</span>
							<span class="widgsize">
								<span> Taille du widget </span>
								<button class="btn btn-danger">25%</button>
								<button class="btn btn-danger">50%</button>
								<button class="btn btn-danger">75%</button>
								<button class="btn btn-danger">100%</button>
							</span>
						</li>

						<li>
							<span class="btn">
								<img src="/images/widget-icons/icopie.png" alt="">
								<span>Pie Chart</span>
							</span>
							<span class="widgsize">
								<span> Taille du widget </span>
								<button class="btn btn-danger">25%</button>
								<button class="btn btn-danger">50%</button>
								<button class="btn btn-danger">75%</button>
								<button class="btn btn-danger">100%</button>
							</span>
						</li>

						<li>
							<span class="btn">
								<img src="/images/widget-icons/icochart.png" alt="">
								<span>Graph</span>
							</span>
							<span class="widgsize">
								<span> Taille du widget </span>
								<button class="btn btn-danger">25%</button>
								<button class="btn btn-danger">50%</button>
								<button class="btn btn-danger">75%</button>
								<button class="btn btn-danger">100%</button>
							</span>
						</li>


					</ul>
				</section>

			</section>
		</section>

		<!-- scripts -->
			<!-- libraries -->
			<%- include [[javascripts.libraries]] %>
			<!-- libraries -->
			<!-- features -->
			<%- include [[javascripts.features]] %>
			<%- include [[javascripts.core]] %>
			<!-- features -->
		<!-- scripts -->

	</body>
</html>
